rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Публичная карточка персонажа. Чтение — ок (можешь сузить при необходимости).
    match /characters/{charId} {
      allow read: if true;
      // Запись только с бэкенда (Admin SDK). Клиенту запрещено.
      allow create, update, delete: if false;
    }

    // Реестр уникальных логинов (бронь username_normalized) — только бэкенд.
    match /usernames/{uname} {
      allow read, write: if false;
    }

    // Секреты (хэши PIN) — только бэкенд.
    match /player_secrets/{charId} {
      allow read, write: if false;
    }

    // Старая ветка, если осталась (чтобы не мешала).
    match /users/{uid}/characters/{docId} {
      allow read: if request.auth != null && request.auth.uid == uid;
      allow create, update, delete: if false;
    }
  }
}
